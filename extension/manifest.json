{
    "manifest_version": 3,
    "name": "Bibliographic Extension",
    "version": "1.0",
    "description": "Un générateur de sources simple comme des liens ou des vidéos.",
    "permissions": [
        "activeTab",
        "notifications"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "img/icon16.jpg"
    }
}